{
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python"
            ],
            "settings": {
                "extensions.ignoreRecommendations": true,
                "security.workspace.trust.enabled": false,
                "extensions.autoCheckUpdates": false,
                "extensions.autoUpdate": false,
                "workbench.editorAssociations": {
                    "*.md": "vscode.markdown.preview.editor"
                },
                "workbench.colorTheme": "GitHub Dark Default",
                "workbench.sideBar.location": "right",
                "files.exclude": {
                    "**/.git": true,
                    "**/.svn": true,
                    "**/.hg": true,
                    "**/CVS": true,
                    "**/.DS_Store": true,
                    "**/Thumbs.db": true,
                    "**/.check": true,
                    "**/.task_tests": true,
                    "**/.devcontainer": true,
                    "**/.vscode": true,
                    "**/.gitignore": true,
                    "**/.github": true,
                    "**/.img": true,
                    "**/.temp": true,
                    "**/.pytest_cache": true,
                    "LICENSE": true
                }
            }
        }
    },
    "postStartCommand": "sleep 10 && bash -c '.scripts/monitor_extensions.sh' >> /tmp/postStartCommand.log 2>&1"
    
}